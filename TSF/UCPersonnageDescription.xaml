<UserControl x:Class="TSF.UCPersonnageDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TSF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="root">
    <DockPanel>
        <Image 
                        DockPanel.Dock="Top" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="{Binding Image, ElementName=root}"
                        Width="100"/>

        <TextBlock 
                        DockPanel.Dock="Top" 
                        Text="{Binding Pseudo, ElementName=root}"
                        HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <TextBlock 
                        DockPanel.Dock="Top" 
                        Text="{Binding Description, ElementName=root}"
                        HorizontalAlignment="Center"
            VerticalAlignment="Center"
                        Margin="10"/>
    </DockPanel>
</UserControl>
