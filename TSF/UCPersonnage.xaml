<UserControl x:Class="TSF.UCPersonnage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TSF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="root">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="{Binding Image, ElementName=root}" Grid.Row="0" Width="80"/>
        <TextBlock Text="{Binding Texte, ElementName=root}" Grid.Row="1" HorizontalAlignment="Center" Width="60"  TextWrapping="Wrap"/>

    </Grid>
</UserControl>
