<UserControl x:Class="TSF.UCCommentaire"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TSF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="root">
    <Grid Background="LightGray" Width="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Date, ElementName=root}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Margin="4" VerticalAlignment="Center" FontSize="12"/>
        <TextBlock Text="{Binding Texte, ElementName=root}" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Margin="4" VerticalAlignment="Center" FontSize="14"  TextWrapping="Wrap"/>

    </Grid>
</UserControl>
